@model RegisterInputViewModel
@{
    ViewData["Title"] = "Register";
}

<section class="signup-section spad">
    <div class="signup-bg set-bg" data-setbg="/img/signup-bg.jpg"></div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="signup-warp">
                    <div class="section-title text-white text-left">
                        <h2>Join Our Community Now!</h2>

                    </div>
                    <!-- signup form -->
                    
                    <form class="signup-form  " asp-controller="Account" asp-action="Register" method="post">

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <input asp-for="Username" class="form-control text-center" placeholder="Username" />
                        <span asp-validation-for="Username" class="text-danger"></span>

                        <input asp-for="Password" class="form-control text-center" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger m-1"></span>

                        <input asp-for="ConfirmPassword" class="form-control text-center  " placeholder="Confirm Password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                        <input asp-for="Email" class="form-control text-center" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <input asp-for="FirstName" class="form-control text-center" placeholder="First Name" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>

                        <input asp-for="LastName" class="form-control text-center" placeholder="Last Name" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                        
                          <button class="site-btn ">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>