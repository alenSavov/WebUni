
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Admin Panel</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <!-- Bootstrap CSS-->
    @*<link rel="stylesheet" href="vendor/bootstrap/css/bootstrap.min.css">*@
    <link href="~/Administration/Administration/vendor/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome CSS-->
    @*<link rel="stylesheet" href="vendor/font-awesome/css/font-awesome.min.css">*@
    <link href="~/Administration/Administration/vendor/font-awesome/css/font-awesome.css" rel="stylesheet" />

    <!-- Fontastic Custom icon font-->
    @*<link rel="stylesheet" href="css/fontastic.css">*@
    <link href="~/Administration/Administration/css/fontastic.css" rel="stylesheet" />

    <!-- Google fonts - Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700">

    <!-- jQuery Circle-->
    @*<link rel="stylesheet" href="css/grasp_mobile_progress_circle-1.0.0.min.css">*@
    <link href="~/Administration/Administration/css/grasp_mobile_progress_circle-1.0.0.min.css" rel="stylesheet" />

    <!-- Custom Scrollbar-->
    @*<link rel="stylesheet" href="vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.css">*@
    <link href="~/Administration/Administration/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.css" rel="stylesheet" />

    <!-- theme stylesheet-->
    @*<link rel="stylesheet" href="css/style.default.css" id="theme-stylesheet">*@
    <link href="~/Administration/Administration/css/style.default.css" rel="stylesheet" />

    <!-- Custom stylesheet - for your changes-->
    @*<link rel="stylesheet" href="css/custom.css">*@
    <link href="~/Administration/Administration/css/custom.css" rel="stylesheet" />

    <!-- Favicon-->
    @*<link rel="shortcut icon" href="img/favicon.ico">*@
    <img src="~/Administration/Administration/img/favicon.ico" />

    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body>
    <!-- Side Navbar -->
    <nav class="side-navbar">
        <div class="side-navbar-wrapper">
            <!-- Sidebar Header    -->
            <div class="sidenav-header d-flex align-items-center justify-content-center">
                <!-- User Info-->
                <div class="sidenav-header-inner text-center">
                    <img src="~/img/User.jpg" alt="person" class="img-fluid rounded-circle">
                    <h2 class="h5">@this.User.Identity.Name</h2><span>Administrator</span>
                </div>
                <!-- Small Brand information, appears on minimized sidebar-->
                <div class="sidenav-header-logo"><a href="index.html" class="brand-small text-center"> <strong>W</strong><strong class="text-primary">U</strong></a></div>
            </div>
            <!-- Sidebar Navigation Menus-->
            <!-- MAIN menu-->
            <div class="main-menu">
                <h5 class="sidenav-heading text-success">Main</h5>
                <ul id="side-admin-menu" class="side-menu list-unstyled">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index"> <i class="icon-home"></i>Home</a></li>
                </ul>
            </div>

            <!-- Users Menu-->
            <div class="users-menu">
                <h5 class="sidenav-heading text-success">Users</h5>
                <ul id="side-admin-menu" class="side-menu list-unstyled">
                    <li>
                        <a href="#exampledropdownDropdown2" aria-expanded="false" data-toggle="collapse"> <i class="icon-interface-windows"></i>Users</a>
                        <ul id="exampledropdownDropdown2" class="collapse list-unstyled ">
                            <li><a asp-area="Administration" asp-controller="Administration" asp-action="AddToRole">Add to Role</a></li>

                        </ul>
                    </li>
                </ul>
            </div>

            <!-- Categories menu-->
            <div class="categories-menu">
                <h5 class="sidenav-heading text-success">Categories</h5>
                <ul id="side-admin-menu" class="side-menu list-unstyled">
                    <li>
                        <a href="#exampledropdownDropdownCategories" aria-expanded="false" data-toggle="collapse"> <i class="icon-interface-windows"></i>Categories</a>
                        <ul id="exampledropdownDropdownCategories" class="collapse list-unstyled ">
                            <li><a asp-area="Administration" asp-controller="Administration" asp-action="CreateCategory">Create Category</a></li>
                            <li><a asp-area="Administration" asp-controller="Administration" asp-action="ManageCategory">Manage Categories</a></li>

                        </ul>
                    </li>
                </ul>
            </div>

            <!-- Courses menu-->
            <div class="categories-menu">
                <h5 class="sidenav-heading text-success">Courses</h5>
                <ul id="side-admin-menu" class="side-menu list-unstyled">
                    <li>
                        <a href="#exampledropdownDropdownCourse" aria-expanded="false" data-toggle="collapse"> <i class="icon-interface-windows"></i>Courses</a>
                        <ul id="exampledropdownDropdownCourse" class="collapse list-unstyled ">
                            <li><a asp-area="Administration" asp-controller="Administration" asp-action="CreateCourse">Create Course</a></li>
                            <li><a asp-area="Administration" asp-controller="Administration" asp-action="ManageCourses">Manage Courses</a></li>
                        </ul>
                    </li>
                </ul>
            </div>

            <!-- Events menu-->
            <div class="events-menu">
                <h5 class="sidenav-heading text-success">Events</h5>
                <ul id="side-admin-menu" class="side-menu list-unstyled">
                    <li>
                        <a href="#exampledropdownDropdownEvents" aria-expanded="false" data-toggle="collapse"> <i class="icon-interface-windows"></i>Events</a>
                        <ul id="exampledropdownDropdownEvents" class="collapse list-unstyled ">
                            <li><a asp-area="Administration" asp-controller="Administration" asp-action="CreateEvent">Create Event</a></li>
                            <li><a asp-area="Administration" asp-controller="Administration" asp-action="ManageEvent">Manage Events</a></li>

                        </ul>
                    </li>
                </ul>
            </div>

            <!-- Articles menu-->
            <div class="Articles-menu">
                <h5 class="sidenav-heading text-success">Articles</h5>
                <ul id="side-admin-menu" class="side-menu list-unstyled ">
                    <li>
                        <a href="#exampledropdownDropdownArticles" aria-expanded="false" data-toggle="collapse" class=""> <i class="icon-interface-windows "></i>Articles</a>
                        <ul id="exampledropdownDropdownArticles" class="collapse list-unstyled ">
                            <li><a asp-area="Administration" asp-controller="Administration" asp-action="ManageArticle">Manage Articles</a></li>

                        </ul>
                    </li>
                </ul>
            </div>


        </div>
    </nav>
    <div class="page">
        <!-- navbar-->
        <header class="header">
            <nav class="navbar">
                <div class="container-fluid">
                    <div class="navbar-holder d-flex align-items-center justify-content-between">
                        <div class="navbar-header">
                            <a id="toggle-btn" href="#" class="menu-btn"><i class="icon-bars"> </i></a><a asp-area="Administration" asp-controller="Administration" asp-action="addtorole" class="navbar-brand">
                                <div class="brand-text d-none d-md-inline-block"><span>Admin </span><strong class="text-primary">WebUni</strong></div>
                            </a>
                        </div>
                        <ul class="nav-menu list-unstyled d-flex flex-md-row align-items-md-center">

                            <!-- Log out-->
                            <li class="nav-item bg-danger"><a asp-area="" asp-controller="Account" asp-action="Logout" class="nav-link logout"> <span class="d-none d-sm-inline-block">Logout</span><i class="fa fa-sign-out"></i></a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="banner">
            <partial name="_TempDataMessegesPartial" />
        </div>
        @RenderBody()
        <footer class="main-footer">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-6">
                        <p>WebUni &copy; 2017-2019</p>
                    </div>
                    <div class="col-sm-6 text-right">
                        <p>Design by <a href="https://github.com/alenSavov" class="external">Alen Savov</a></p>
                     
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <!-- JavaScript files-->

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

        
    <script src="~/Administration/Administration/vendor/jquery/jquery.js"></script>
    <script src="~/Administration/Administration/vendor/jquery-validation/jquery.validate.js"></script>
    <script src="~/Administration/Administration/popper.js/popper.js"></script>
    <script src="~/Administration/Administration/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="~/Administration/Administration/js/grasp_mobile_progress_circle-1.0.0.min.js"></script>
    <script src="~/Administration/Administration/vendor/jquery.cookie/jquery.cookie.js"></script>
    <script src="~/Administration/Administration/vendor/chart.js/Chart.js"></script>
    <script src="~/Administration/Administration/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/Administration/Administration/js/charts-home.js"></script>
    <script src="~/Administration/Administration/js/front.js"></script>

    <!-- Main File-->
</body>
</html>