@model BaseCourseViewModel

@{
    ViewData["Title"] = "Edit Course";
}

<h1 class="text-center p-3 bg-success">Edit Course</h1>
<hr />

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <form asp-area="Administration" asp-controller="Administration" asp-action="EditCourse" method="post" class="contact-form" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" value="@Model.Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" value="@Model.Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label font-weight-bold"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label font-weight-bold"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="">
                    <label asp-for="Trainer" class="control-label font-weight-bold">Trainer</label>
                    <input asp-for="Trainer" class="form-control" value="@Model.Trainer">
                    <span asp-validation-for="Trainer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CoursePicture" class="control-label btn btn-warning">Upload Picture </label>
                    <input asp-for="CoursePicture" hidden accept=".gif,.png,.jpg,.jpeg" />
                    <span asp-validation-for="CoursePicture" class="text-danger"></span>
                </div>
                <button class="btn btn-success m-1">Save Changes</button>
            </form>
        </div>
    </div>
</div>
