@model SchoolDiary.ServicesViewModels.Courses.CollectionAllCoursesByidInCategoryViewModel
<section class="categories-section m-3">
    <div class="container">
        <div class="section-title">
            <h2>Our Courses in Category </h2>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec malesuada lorem maximus mauris scelerisque, at rutrum nulla dictum. Ut ac ligula sapien. Suspendisse cursus faucibus finibus.</p>
        </div>
        <div class="row">
            <!-- categorie -->
            @foreach (var course in Model.courses)
            {
                <div class="col-lg-4 col-md-6">
                    <a asp-area="courses" asp-controller="courses" asp-action="Details" asp-route-id="@course.Id">
                        <div class="categorie-item ">
                            @if (course.CoursePictureUrl != null)
                            {
                                <img src="@course.CoursePictureUrl" id="stadiumImg" />
                                <hr class="teamLegend-line" />
                                <div>
                                    <div class="ci-text">
                                        <h5>@course.Name</h5>
                                        @if (course.Description != null && course.Description.Length > 70)
                                        {
                                            <p>@course.Description.Substring(0, 70) ...</p>
                                        }
                                        else
                                        {
                                            <p>@course.Description</p>
                                        }
                                    </div>
                                </div>
                            }
                            else
                            {
                                <img src="https://res.cloudinary.com/webuni/image/upload/v1546945534/CategoryPicture/NoImageFound_categoryPicture.jpg" id="stadiumImg" />
                                <hr class="teamLegend-line" />
                                <div>
                                    <div class="ci-text">
                                        <h5>@course.Name</h5>
                                        @if (course.Description != null && course.Description.Length > 70)
                                        {
                                            <p>@course.Description.Substring(0, 70) ...</p>
                                        }
                                        else
                                        {
                                            <p>@course.Description</p>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </a>
                </div>

            }
        </div>
    </div>
</section>
<!-- categories section end -->