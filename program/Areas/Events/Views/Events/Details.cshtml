@model DetailsViewModelColletion
@{
    ViewData["Title"] = "Details";
}

<div style="height: 40px;"></div>


    <div class="unit-5 overlay" style="background-image: url('/img/hero_1.jpg');">
        <div class="container text-center">
            <h2 class="mb-0">@Model.Event.Name</h2>
        </div>
    </div>

    <div class="site-section bg-light">
        <div class="container">
            <div class="row">

                <div class="col-md-12 col-lg-8 mb-5">

                    <div class="p-5 bg-white text-center">
                        <div class="mb-4 mb-md-5 mr-5 ">
                            <div class="job-post-item-header d-flex align-items-end ">
                                <h2 class="mr-3 text-primary ">@Model.Event.Name</h2>
                            </div>

                            <div class="badge-wrap m-4">
                                Starting date <span class="border border-warning text-warning py-2 px-4 rounded">@Model.Event.StartDate</span>
                               
                            </div>
                            <div class="badge-wrap m-4">
                               
                                Place <span class="border border-warning text-warning py-2 px-4 rounded">@Model.Event.Place</span>
                            </div>
                        </div>

                        <div class="img-border mb-5">
                            <a href="https://youtu.be/7_LPdttKXPc" class="popup-vimeo image-play">
                                <span class="icon-wrap">
                                    <span class="icon icon-play"></span>
                                </span>
                                @if (Model.Event.EventPictureUrl != null)
                                {
                                    <img src="@Model.Event.EventPictureUrl" />
                                }
                                else
                                {
                                    <img src="https://res.cloudinary.com/webuni/image/upload/v1546945534/CategoryPicture/NoImageFound_categoryPicture.jpg" />

                                }
                            </a>
                        </div>

                        <p>@Model.Event.Description</p>
                        <a asp-area="Events" asp-controller="Events" asp-action="AddUser" asp-route-id="@Model.Event.Id" class="btn site-btn  py-2 px-4">Follow Event</a>
                    </div>
                </div>
                <div class="col-lg-4">
                    <h4 class="text-primary">All followers in the event</h4>
                    <table class="table">

                        @{var count = 1;
                            @foreach (var userItem in Model.Users)
                            {
                                <tbody>
                                    <tr>
                                        <th scope="row" class="text-danger font-weight-bold">@count</th>
                                        <td class="font-italic text-danger font-weight-bold">@userItem</td>
                                    </tr>
                                </tbody>
                                { count++; }
                            }
                        }
                    </table>
                    <div class="p-4 mb-3 bg-white">
                        <h3 class="h5 text-black mb-3">Contact Info</h3>
                        <p class="mb-0 font-weight-bold">Address</p>
                        <p class="mb-4">203 Fake St. Mountain View, San Francisco, California, USA</p>
                        <p class="mb-0 font-weight-bold">Phone</p>
                        <p class="mb-4"><a href="#">+1 232 3235 324</a></p>
                        <p class="mb-0 font-weight-bold">Email Address</p>
                        <p class="mb-0"><a href="#">youremail@domain.com</a></p>
                    </div>
                    <div class="p-4 mb-3 bg-white">
                        <h3 class="h5 text-black mb-3">More Info</h3>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ipsa ad iure porro mollitia architecto hic consequuntur. Distinctio nisi perferendis dolore, ipsa consectetur? Fugiat quaerat eos qui, libero neque sed nulla.</p>
                        <p><a href="#" class="btn btn-primary px-4 py-2 text-white pill">Learn More</a></p>
                    </div>
                </div>
                <div class="col-lg-4">
                   
                </div>
            </div>
    </div>



